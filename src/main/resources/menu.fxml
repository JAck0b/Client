<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      alignment="CENTER"
      spacing="10"
      style="-fx-background-color: #964B00"
      fx:id="layout"
      fx:controller="Menu"
      prefHeight="250.0" prefWidth="200.0">
    <Label text="Enter servers IPv4." style="-fx-font-size: 15 arial"/>
    <TextField fx:id="serverAddress" prefWidth="100" promptText="Enter servers IPv4."/>
    <!--<Button fx:id="newGame" text="New Game" style="-fx-background-color: #FFE5B4"/>-->
    <Button fx:id="connect" text="Connect and Play" style="-fx-background-color: #FFE5B4" onAction="#playHandler"/>
    <Button fx:id="help" text="Help" style="-fx-background-color: #FFE5B4" onAction="#helpHandler"/>
    <Button fx:id="settings" text="Settings" style="-fx-background-color: #FFE5B4" onAction="#settingHandler"/>
    <Button fx:id="exit" text="Exit" style="-fx-background-color: #FFE5B4" onAction="#exitHandler"/>
</VBox>
