<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.control.CheckBox?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="Board"
      style="-fx-background-color: #B87333"
      fx:id="layout"
      prefHeight="600.0" prefWidth="600.0">
    <HBox style="-fx-background-color: gray">
        <Label fx:id="status" text="Status" prefWidth="200" style="-fx-font-size: 15 arial; -fx-background-color: lightgray" prefHeight="30" alignment="CENTER"/>
        <!--<Pane prefWidth="20" prefHeight="20" style="-fx-background-color: #000000"/>-->
        <Pane fx:id="currentPlayer" prefHeight="20" prefWidth="50" style="-fx-background-color: black"/>
        <Label fx:id="stepCounter" text="Steps = 0" prefWidth="100" prefHeight="30" alignment="CENTER" style="-fx-font-size: 15 arial; -fx-background-color: lightgray"/>
        <Button fx:id="skip" text="Skip" minWidth="100" onAction="#skipHandler" style="-fx-font-size:15 arial" />
        <CheckBox fx:id="hints" text="Hints" style="-fx-font-size: 15 arial"/>
    </HBox>
    <Pane fx:id="pane" prefWidth="560" prefHeight="720" style="-fx-background-color: #B87333"  />

</VBox>